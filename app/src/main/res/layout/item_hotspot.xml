<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_size_5"
    android:background="@drawable/shape_border_black_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_pic_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_150"
        android:scaleType="centerCrop"
        android:src="@drawable/default_bg" />

    <TextView
        android:id="@+id/tv_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_size_5"
        android:layout_marginRight="@dimen/dp_size_5"
        android:layout_marginTop="@dimen/dp_size_5"
        android:singleLine="true"
        android:text="这个是测试案例描述"
        android:textSize="@dimen/sp_size_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_50"
        android:layout_marginLeft="@dimen/dp_size_5"
        android:layout_marginRight="@dimen/dp_size_5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_item_author_icon"
                android:layout_width="@dimen/dp_size_20"
                android:layout_height="@dimen/dp_size_20"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tv_item_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_5"
                android:text=""
                android:textSize="@dimen/sp_size_12" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_item_appreciate_icon"
                    android:layout_width="@dimen/dp_size_20"
                    android:layout_height="@dimen/dp_size_20"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_appreciate" />

                <TextView
                    android:id="@+id/tv_item_appreciate_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_size_5"
                    android:text="9999"
                    android:textSize="@dimen/sp_size_12" />
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>