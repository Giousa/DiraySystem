<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_content" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_200"
        android:scaleType="centerCrop"
        android:src="@drawable/default_bg" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_size_20"
        android:text="这个是图片介绍" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_80"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_hotspot_appreciate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_size_30"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/icon_appreciate" />

            <TextView
                android:id="@+id/tv_hotspot_appreciate_count"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_size_20" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_hotspot_collection"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_size_30"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/my_collect_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="收藏"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_size_20" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_hotspot_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_size_30"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/icon_comment" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="评论"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_size_20" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_100"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_size_10">

        <ImageView
            android:layout_width="@dimen/dp_size_80"
            android:layout_height="@dimen/dp_size_80"
            android:src="@drawable/default_bg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_size_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作者名称"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_size_10"
                android:text="2018-12-27" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/dp_size_30">

            <LinearLayout
                android:id="@+id/ll_hotspot_followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_border_black_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dp_size_5">

                <ImageView
                    android:layout_width="@dimen/dp_size_20"
                    android:layout_height="@dimen/dp_size_20"
                    android:src="@drawable/icon_followers" />

                <TextView
                    android:id="@+id/tv_hotspot_followers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>