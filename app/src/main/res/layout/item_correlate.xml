<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:padding="@dimen/dp_size_1">

    <ImageView
        android:id="@+id/iv_correlate_icon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:padding="@dimen/dp_size_5"
        android:src="@drawable/default_my_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_size_5"
        android:layout_marginRight="@dimen/dp_size_5"
        android:layout_weight="5"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_correlate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="博丽灵梦"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_size_18" />

        <TextView
            android:id="@+id/tv_correlate_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_5"
            android:singleLine="true"
            android:text="这个才不是异变"
            android:textSize="@dimen/sp_size_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_size_5"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dp_size_50">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="发布"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:id="@+id/tv_correlate_release_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="粉丝"
                android:textSize="@dimen/sp_size_12" />

            <TextView
                android:id="@+id/tv_correlate_fun_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textSize="@dimen/sp_size_12" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="@dimen/dp_size_2">

        <LinearLayout
            android:id="@+id/ll_correlate_followers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_border_black_bg"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dp_size_5">

            <ImageView
                android:layout_width="@dimen/dp_size_20"
                android:layout_height="@dimen/dp_size_20"
                android:src="@drawable/icon_followers" />

            <TextView
                android:id="@+id/tv_correlate_followers_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textSize="@dimen/sp_size_14" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
